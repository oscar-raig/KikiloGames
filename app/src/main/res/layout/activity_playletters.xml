<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_segunda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.oscarraig.justjava.controller.PlayLettersActivity">


    <LinearLayout
        android:id="@+id/groupIntentButtons"
        android:layout_width="wrap_content"
        android:layout_height="100sp">
        <Button
            android:id="@+id/intent_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:onClick="intent"
            android:text="A"/>
        <Button
            android:id="@+id/intent_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="16sp"
            android:onClick="intent"
            android:text="B"/>
        <Button
            android:id="@+id/intent_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="16sp"
            android:onClick="intent"
            android:text="C"/>
    </LinearLayout>
    <TextView
        android:id="@+id/winning_letter"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:gravity="center"
        android:text="A"
        android:textSize="16sp"
        android:textColor="@android:color/black" />
    <LinearLayout
        android:layout_width="200sp"
        android:layout_height="200sp">
    <Button
        android:id="@+id/returnTomenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:onClick="returnToMenu"
        android:text="RETURN MENU"/>
    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:onClick="play"
        android:text="PLAY"/>
    </LinearLayout>
</LinearLayout>
